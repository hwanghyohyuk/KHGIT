		// TODO Auto-generated method stub
		
	}

	public static void sumRandomNumber() {
		// TODO Auto-generated method stub
		
	}

	public static void continueGugudan() {
		// TODO Auto-generated method stub
		
	}

	public static void shutNumber() {
		// TODO Auto-generated method stub
		
	}
	
}
